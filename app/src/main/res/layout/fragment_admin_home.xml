<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminFragment.AdminHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:background="@drawable/container_header2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIPEME"
                android:textColor="@color/black"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROOM"
                android:textColor="@color/white"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_13sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, Abiyu Adilfi"
            android:maxLength="25"
            android:textColor="@color/black"
            android:fontFamily="@font/popmed"
            android:textSize="@dimen/_16sdp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menuDataRuangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_30sdp"
                        app:cardBackgroundColor="@color/main"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/data_ruang_ic"
                            android:layout_gravity="center_vertical"/>


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Ruangan"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popsem"
                        android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/menuDataTipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            app:cardBackgroundColor="@color/main"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_30sdp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/data_type_ic"
                                android:layout_gravity="center_vertical"/>


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Tipe"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/popsem"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/menuDataCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            app:cardBackgroundColor="@color/main"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_30sdp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/data_customer_ic"
                                android:layout_gravity="center_vertical"/>


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Customer"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/popsem"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/menuDataTransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            app:cardBackgroundColor="@color/main"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_30sdp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/data_transaksi_ic"
                                android:layout_gravity="center_vertical"/>


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Transaksi"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/popsem"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/menuDataLapora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_30sdp"
                            app:cardBackgroundColor="@color/main"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_30sdp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/report_ic"
                                android:layout_gravity="center_vertical"/>


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laporan"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/popsem"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>








            </LinearLayout>
        </androidx.core.widget.NestedScrollView>





    </LinearLayout>



</RelativeLayout>