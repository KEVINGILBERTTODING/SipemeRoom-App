<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main"
    tools:context=".AdminFragment.AdminInsertRuanganFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:background="@drawable/contiainer2">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:text="Input Ruangan Baru"
            android:fontFamily="@font/popsem"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/tv1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipe Ruang"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spTipe"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ruangan"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etRuangan"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etKapasitas"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dekorasi"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etDekorasi"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spAc"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makanan"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spMakanan"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MP3 Player"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spMp3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Central Lock"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spCentralLock"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga Sewa perhari"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:visibility="gone"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etHargaSewa"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Denda"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etDenda"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tahun"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:id="@+id/etTahun"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <Spinner
                    android:id="@+id/spStatus"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/container_edittext2"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gambar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <ImageView
                    android:id="@+id/ivGambar"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImagePicker"
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Pilih"/>

                    <TextView
                        android:id="@+id/tvPathImage"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/popmed"
                        android:background="@drawable/container_edittext2"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>




    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/popsem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_10sdp"
        app:backgroundTint="@color/white"/>




</RelativeLayout>