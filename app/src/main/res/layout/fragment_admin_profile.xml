<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Admminfragment.AdminProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/container_header2"
        android:padding="@dimen/_10sdp"
        android:layout_height="@dimen/_110sdp">


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="@color/black"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abiyu Adilfi"
                android:textColor="@color/black"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_15ssp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvUbahProfile"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/_5sdp"
            app:contentPadding="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUbahProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah profil"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvUbahPassword"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/_5sdp"
            app:contentPadding="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUbahPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah password"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvKeluar"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/_5sdp"
            app:contentPadding="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvKeluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_12ssp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIPEME"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:fontFamily="@font/popmed"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROOM"
            android:textColor="@color/main"
            android:layout_centerVertical="true"
            android:fontFamily="@font/popsem"
            android:textSize="@dimen/_15ssp"/>


    </LinearLayout>



</RelativeLayout>